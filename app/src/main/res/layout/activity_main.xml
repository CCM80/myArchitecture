<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="time"
            type="com.ggx.myarchetecture.module.viewmodule.TimeModule" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{time.data}" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{time::getTime}"
            android:text="获取时间" />

        <Button
            android:id="@+id/clrBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{time::clear}"
            android:text="清空" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpDouBan"
            android:text="跳转豆瓣" />
    </LinearLayout>
</layout>
